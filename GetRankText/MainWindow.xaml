<Window x:Class="GetRankText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10" Text="Summoner name: "/>
                <TextBox Margin="10" Width="300" Height="20" Name="SummonerBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10" Text="Location of textfile"/>
                <TextBox Margin="10" Width="300" Height="20" Text="C:\Users\Brian R\Desktop" Name="LocationBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10" Text="API Key:                 "/>
                <TextBox Margin="10" Width="300" Height="20" Text="c19aabb4-0d8e-44c1-ae83-4b03249382e9" Name="ApiBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox Margin="10" Content="Default" Name="DefaultCheck"/>
                <Button Margin="10" Content="Start" Width="50" Name="ToggleButton" Click="ToggleButton_Click"/>
                <TextBlock Margin="10" Text="Time till next update: 300 Sec" Name="TimeLabel" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
